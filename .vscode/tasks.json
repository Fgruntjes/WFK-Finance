{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch App.Backend",
      "type": "shell",
      "command": "dotnet watch --project App.Backend",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "DOTNET_ENVIRONMENT": "Development"
        }
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Watch Job.InstitutionAccountTransactionImport",
      "type": "shell",
      "command": "dotnet watch --project App.Job.InstitutionAccountTransactionImport",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "DOTNET_ENVIRONMENT": "Development"
        }
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Dev frontend",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    }
  ]
}