{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "App.Backend build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/App.Backend/App.Backend.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "App.Backend watch",
            "command": "dotnet",
            "type": "process",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                }
            },
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/App.Backend/App.Backend.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}