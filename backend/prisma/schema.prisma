// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int                @id @default(autoincrement())
  externalId    String             @unique
  organisations OrganisationUser[]
}

model Organisation {
  id                     Int                     @id @default(autoincrement())
  slug                   String                  @unique
  users                  OrganisationUser[]
  institutionConnections InstitutionConnection[]
}

enum UserRole {
  USER
  ADMIN
}

model OrganisationUser {
  user           User         @relation(fields: [userId], references: [id])
  userId         Int
  organisation   Organisation @relation(fields: [organisationId], references: [id])
  organisationId Int
  role           UserRole     @default(USER)

  @@id([userId, organisationId])
}

model Institution {
  id          Int                     @id @default(autoincrement())
  externalId  String                  @unique
  name        String
  logo        String
  countries   String[]
  connections InstitutionConnection[]
}

model InstitutionConnection {
  id             Int                            @id @default(autoincrement())
  organisation   Organisation                   @relation(fields: [organisationId], references: [id])
  organisationId Int
  institution    Institution                    @relation(fields: [institutionId], references: [id])
  institutionId  Int
  externalId     String
  connectUrl     String
  accounts       InstitutionConnectionAccount[]

  @@unique([organisationId, externalId])
}

model InstitutionConnectionAccount {
  id                      Int                   @id @default(autoincrement())
  externalId              String
  institutionConnection   InstitutionConnection @relation(fields: [institutionConnectionId], references: [id])
  institutionConnectionId Int
  ownerName               String?
  iban                    String?

  @@unique([institutionConnectionId, externalId])
}
